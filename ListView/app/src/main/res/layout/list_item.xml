<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:src="@drawable/logo"
        android:id="@+id/book_logo" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:text="Hello This is Main Text"
        android:textAlignment="center"
        android:textSize="22dp"
        android:layout_marginRight="10dp"
        android:textColor="#000000"
        android:id="@+id/book_name"
        android:layout_alignTop="@+id/book_logo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/book_logo"
        android:layout_toEndOf="@+id/book_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Price: 15$"
        android:textSize="18dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/book_price"
        android:layout_below="@+id/book_name"
        android:layout_alignLeft="@+id/book_name"
        android:layout_alignStart="@+id/book_name" />
</RelativeLayout>
